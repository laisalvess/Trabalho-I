<script async> async function carregarCurso(curso) {
    try{
        document.getElementById("codigo") .innerHTML= "Carregando informacoes do curso...";
        await new Promise(resolve => setTimeout(resolve, 2000));

let mensagens = { 
    "Quem somos?": "Somos um laboratorio de tecnologia focado em pesquisa e desenvolvimento.",
    "Visita Virtual": "Oferecemos visitas virtuais para conhecer nossas instalações e projetos.",
    "Pesquisas": "Nossas pesquisas abrangem diversas áreas da tecnologia, incluindo IA, robotica e mais."

};
document.getElementById("codigo").innerHTML = mensagens[curso];

 }catch (erro) {
    document.getElementById("codigo").innerHTML = "Erro ao carregar informações do curso.";
    console.error("Erro capturado:", erro);

}
}
</script>
